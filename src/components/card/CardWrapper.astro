---
import CardItem from './CardItem.astro';

import type {CollectionEntry} from 'astro:content';

type TPost = CollectionEntry<'blog'> | CollectionEntry<'projects'>;

interface Props {
	items: TPost[];
}

const {items} = Astro.props;
---

<div class="flex flex-col gap-3">
	{items.map(item =>
		<CardItem item={item}/>)}
</div>
